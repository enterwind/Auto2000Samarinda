<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vay.enterwind.auto2000samarinda.module.supervisor.track.SalesMapActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="vay.enterwind.auto2000samarinda.module.supervisor.track.SalesMapActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/putih"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Informasi Sales"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="9">

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noviyanto Rahmadi"
                    android:textColor="@color/hitam"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Email: novay@enterwind.com"
                    android:textColor="@color/grey" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/splashscreen"
                app:civ_border_width="1dp"
                app:civ_border_color="#FFF"/>

        </LinearLayout>



        <TextView
            android:id="@+id/longitude"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""/>

        <TextView
            android:id="@+id/latitude"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""/>

        <Button
            android:text="PANGGILAN TELEPON"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTelepon"
            android:background="@drawable/btn_accent"
            android:textColor="@color/putih"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="5dp"/>

    </LinearLayout>

</RelativeLayout>