<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Aplikasi"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/oswald"
                android:layout_margin="20dp"
                android:paddingLeft="30dp"/>

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:id="@+id/imageView2" />

    <TextView
        android:id="@+id/auto2000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:text="Auto2000 Toyota Samarinda"
        android:textAlignment="center"
        android:fontFamily="@font/oswald"
        android:textColor="@color/black_semi_transparent"/>

    <TextView
        android:id="@+id/versiAplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auto2000"
        android:text="Versi Aplikasi 1.0"
        android:fontFamily="@font/oswald"
        android:textAlignment="center"
        android:textColor="@color/black_semi_transparent"/>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/versiAplikasi"
        android:text="Copyright Â© PT Auto2000 Samarinda"
        android:fontFamily="@font/oswald"
        android:textAlignment="center"
        android:textColor="@color/black_semi_transparent"/>

    <TextView
        android:id="@+id/reserved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/copyright"
        android:text="All Rights Reserved."
        android:fontFamily="@font/oswald"
        android:textAlignment="center"
        android:textColor="@color/black_semi_transparent"/>

</RelativeLayout>