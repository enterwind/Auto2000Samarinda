<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToastSukses">
        <item name="textBold">true</item>
        <item name="textColor">#fff</item>
        <item name="textFont">@font/oswald</item>
        <item name="textSize">16sp</item>
        <item name="colorBackground">@color/green</item>
        <item name="solidBackground">true</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ToastGagal">
        <item name="textBold">true</item>
        <item name="textColor">#fff</item>
        <item name="textFont">@font/oswald</item>
        <item name="textSize">16sp</item>
        <item name="colorBackground">@color/red</item>
        <item name="solidBackground">true</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ToastInfo">
        <item name="textBold">true</item>
        <item name="textColor">#fff</item>
        <item name="textFont">@font/oswald</item>
        <item name="textSize">16sp</item>
        <item name="colorBackground">@color/grey</item>
        <item name="solidBackground">true</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">5dp</item>
    </style>

</resources>
